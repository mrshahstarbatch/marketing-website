<%- include('../partials/header') %>

<main>
  <h1>Marketing Insights</h1>
  
  <% posts.forEach(post => { %>
    <article style="margin-bottom: 2rem; border-bottom: 1px solid #eee; padding-bottom: 1rem;">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
    </article>
  <% }) %>
</main>

<%- include('../partials/footer') %>
<% posts.forEach(post => { %>
  <article>
    <h2>
      <a href="/blog/<%= post.id %>"> <!-- Add this link -->
        <%= post.title %>
      </a>
    </h2>
    <p><%= post.content.substring(0, 100) %>...</p>
  </article>
<% }) %>
<% posts.forEach(post => { %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <small><%= post.date %></small>
  </div>
<% }) %>